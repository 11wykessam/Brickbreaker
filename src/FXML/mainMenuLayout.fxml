<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MainMenuController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="root">

    <center>
        <VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="10">

            <Label text="Brickbreaker" fx:id="title"/>

            <Button text="Start" styleClass="menuButton" onMouseClicked="#startButtonPressed"/>
            <Button text="Options" styleClass="menuButton"/>

        </VBox>
    </center>

    <!-- points to the stylesheet that this markup file is using-->
    <stylesheets>
        <URL value="@../css/menu.css" />
    </stylesheets>

</BorderPane>
